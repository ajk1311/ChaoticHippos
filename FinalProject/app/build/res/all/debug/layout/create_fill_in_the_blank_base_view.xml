<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/fitb_qtext_edittext"
        android:clickable="false"
        android:hint="Insert question text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/fitb_insertblank_button"
        android:layout_gravity="center"
        android:text="Insert Blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fitb_blank1_img"
            android:src="@drawable/blank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/fitb_blank1_edittext"
            android:clickable="false"
            android:hint="First blank answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fitb_blank2_img"
            android:src="@drawable/blank2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/fitb_blank2_edittext"
            android:clickable="false"
            android:hint="Second blank answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fitb_blank3_img"
            android:src="@drawable/blank3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/fitb_blank3_edittext"
            android:clickable="false"
            android:hint="Third blank answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <Button
        android:text="Create"
        android:id="@+id/fitb_create_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

